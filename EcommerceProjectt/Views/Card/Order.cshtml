<h2 class="Productheading">

    Place Your Order
</h2>

<div class="main2">


    <table>
        <form action="Order" method="post" >
            @{
                if (Model != null)
                {
                    foreach (var Data in Model)
                    {
                    <tr>
                        <td class="picture">   <img src="@Url.Content(Data.ImagePath)" height="100vh" width="80%" alt="" /> </td>
                        <td class="namee" name="Name">@Data.Name</td>
                        <td class="descriptionss">@Data.Description</td>
                        <td class="quantity" name="Price">Price: @Data.Price</td>
                    </tr>
                    <tr>
                        <td class="picture">   </td>
                        <td class="namee"></td>
                        <td class="descriptionss"></td>
                        <td class="quantity" >
                            <input id="qtyshow" value=" @Data.Quantity" hidden="" />
                            <div class="maini">
                                <p class="qqty">Quantity: </p>
                                <div class="Contain">
                                    <a id="minus" onclick="Sub()">-</a>
                                    <input id="where" name="where" type="text" readonly="" value="0" />
                                    <a id="plus" onclick="Add()">+</a>

                                </div>
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <td class="picture">   </td>
                        <td class="namee"></td>
                        <td class="descriptionss"></td>
                        <td class="quantity">
                            <div class=" tot">
                                <input id="price" value="@Data.Price" hidden="" />
                                <p class="total"> Total: </p>
                                <input id="multi" name="Quantity" value="@Data.Price" />
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <td class="picture">   </td>
                        <td class="namee"></td>
                        <td class="descriptionss"></td>
                        <td class="btns ">
                            @*                            <a href="BuyNow" type="submit" name="PayNow" class="payNow">Pay Now</a>
                            *@
                            <input type="submit" name="PayNow" class="payNow" value="Pay Now">
                            <input type="submit" class="Installment" value="Apply for Installment">

                        </td>
                    </tr>
                }
            }
            }
            </form>

        </table>
        <div class="delivery">
            <img src="~/img/Delivery (1).gif" />
        </div>
    </div>
    <script type="text/javascript" src="~/js/main2.js"></script>
