@using System.Web.UI.WebControls
@{
    ViewBag.Title = "Registration";
    Layout = "~/Views/_LayoutPage1.cshtml";
}

<style>
.container {
    overflow-y: scroll;
    max-height: 800px; /* Adjust the height as needed */
}

</style>

@Html.Raw(ViewBag.Error3)
<img class="wave" src="/img/wave.png">
<div class="container">
    <div class="img">
        <img src="/img/bg.svg" alt="" />
    </div>
    <div class="login-content">
        <form action="Registration" method="post">
            <img src="/img/avatar.svg">
            <h2 class="title">Registration</h2>
            <div class="input-div one">
                <div class="i">
                    <i class="fas fa-user"></i>
                </div>
                <select id="Select1" name="Select" required="">
                    <option>Register as a</option>
                    <option>Merchant</option>
                    <option>Client</option>
                </select>
            </div>
            <div class="input-div one">
                <div class="i">
                    <i class="fas fa-user"></i>
                </div>
                <div class="div">
                    <input type="text" name="Fname" placeholder="First Name" class="input" required="">
                </div>
            </div>
            <div class="input-div one">
                <div class="i">
                    <i class="fas fa-user"></i>
                </div>
                <div class="div">
                    <input type="text" name="Lname" placeholder="Last Name" class="input" required="">
                </div>
            </div>
            <div class="input-div one">
                <div class="i">
                    <i class="fas fa-user"></i>
                </div>
                <div class="div">
                    <select id="Select2" name="country" class="form-control">
                        <option value="Select">Country...</option>
                        <option value="Afghanistan">Afghanistan</option>
                        <option value="Åland Islands">Åland Islands</option>
                    </select>
                </div>
            </div>
            <div class="input-div one">
                <div class="i">
                    <i class="fas fa-user"></i>
                </div>
                <div class="div">
                    <input type="email" name="Email" placeholder="Email" class="input" required="">
                </div>
            </div>
            <div class="input-div pass">
                <div class="i">
                    <i class="fas fa-lock"></i>
                </div>
                <div class="div">
                    <input type="password" name="Password" placeholder="Password" class="input" required="">
                </div>
            </div>
            <div id="signup">
                <a id="redirect" onclick="@("window.location.href='"+Url.Action("login","Account")+"'")">Already have an account...</a>
            </div>
            <input type="submit" class="btn" value="Register">
        </form>
    </div>
</div>
<script type="text/javascript" src="../../js/main.js"></script>
